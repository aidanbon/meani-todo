/*
 *  task.styl
 *  TaskApp style sheet
 */

label.checkbox {
    width: 50px
}

.task-done-true {
    text-decoration: line-through
    color: grey
}

.task-phone {
    padding: 15px
}

.taskBody {
    font-size: 90%
}

// line item animation
.task-animation.ng-enter, .task-animation.ng-leave, .task-animation.ng-move {
    -webkit-transition: .25s ease all .001s;
}

.task-animation.ng-enter {
  opacity: 0;
  -webkit-transform: scale(0.6);
}

.task-animation.ng-enter.ng-enter-active {
  opacity: 1;
  -webkit-transform: scale(1);
}

.task-animation.ng-leave {
  opacity: 1;
  -webkit-transform: scale(1);
}

.task-animation.ng-leave.ng-leave-active {
  opacity: 0;
  -webkit-transform: scale(0.6);
}
